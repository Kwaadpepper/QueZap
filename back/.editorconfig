# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.java]
indent_size = 2
max_line_length = 100

[*.gradle.kts]
indent_size = 2

[*.kt]
indent_size = 2

[*.{yml,yaml,json,md}]
indent_size = 2

[*.{xml,properties}]
indent_size = 2
trim_trailing_whitespace = false
