{
  "editor.formatOnSave": true,
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "typescript",
    "html"
  ],
  "[html]": {
    "html.format.enable": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    },
  },
  "[javascript]": {
    "editor.autoIndent": "full",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    },
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
  },
  "[typescript]": {
    "editor.autoIndent": "full",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    },
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "conventionalCommits.scopes": [
    "front",
  ],
  "github.copilot.chat.commitMessageGeneration.instructions": [
    { "text": "Use Conventional Commits: <type>(<scope> optional): <subject>." },
    { "text": "Write the subject in imperative mood, professional, no trailing period, under 50 characters." },
    { "text": "Body lines must not be longer than 100 characters." },
    { "text": "Allowed types: feat, fix, docs, style, refactor, perf, test, chore, ci." },
    { "text": "Include a scope ONLY when it is obvious (e.g., api, ui, auth). Never invent a scope." },
    { "text": "If a scope is used, restrict it to: front." },
    { "text": "Reference issues with # ONLY if the context (branch name or diff) mentions them. Never invent a number." },
    { "text": "If the branch follows 'issue-123-...' (or similar), reference #123 in the BODY ONLY, never in the subject." },
    { "text": "ALWAYS base the message on the CURRENT diff and the branch name, nothing else." },
    { "text": "After the subject, add a blank line, then an optional short body explaining the WHY." },
    { "text": "Use a footer for BREAKING CHANGE and for formal issue linking (e.g., Closes #123)." }
  ],
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#510321",
    "activityBar.background": "#510321",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#327b05",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#510321",
    "statusBar.background": "#20010d",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#510321",
    "statusBarItem.remoteBackground": "#20010d",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#20010d",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#20010d99",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#20010d",
}
