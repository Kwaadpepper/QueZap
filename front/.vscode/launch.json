  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve",
      "type": "firefox",
      "request": "launch",
      "preLaunchTask": "bun: start",
      "postDebugTask": "kill-ng-serve",
      "url": "http://localhost:4200/",
      "reloadOnChange": {
        "watch": "${workspaceFolder}/**/*.{ts,html,css}",
        "ignore": "**/node_modules/**"
      }
    },
    {
      "name": "ng test",
      "type": "firefox",
      "request": "launch",
      "preLaunchTask": "bun: test",
      "url": "http://localhost:9876/debug.html"
    }
  ]
}
